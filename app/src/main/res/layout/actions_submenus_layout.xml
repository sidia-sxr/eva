<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/submenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_bowl"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_bowl_mask" />

        <ImageView
            android:id="@+id/image_notification_point_play"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@drawable/bg_notification_point_warning"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/btn_hydrant"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_hydrant_mask" />

        <ImageView
            android:id="@+id/image_notification_point_drink"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@drawable/bg_notification_point_warning"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/btn_bed"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_bed_mask" />

        <ImageView
            android:id="@+id/image_notification_point_pee"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@drawable/bg_notification_point_warning"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/btn_fetchbone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_bone" />

        <ImageView
            android:id="@+id/image_notification_point_sleep"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@drawable/bg_notification_point_warning"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    </RelativeLayout>
</LinearLayout>