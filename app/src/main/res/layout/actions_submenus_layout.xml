<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/submenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btn_bowl"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_bowl_mask" />

    <ImageView
        android:id="@+id/btn_hydrant"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_hydrant_mask" />

    <ImageView
        android:id="@+id/btn_bed"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_bed_mask" />

    <ImageView
        android:id="@+id/btn_fetchbone"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_button_bone" />

</LinearLayout>